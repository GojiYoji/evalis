{
  "name": "evalis",
  "version": "0.2.0",
  "description": "A polyglot, secure, user-friendly expression evaluator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:tsc": "tsc",
    "test": "jest",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "prepack": "make prepack"
  },
  "keywords": [
    "expression",
    "evaluator",
    "parser",
    "antlr"
  ],
  "author": "souldzin",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "4.0.9",
    "@types/node": "^20.10.6",
    "eslint": "9.39.2",
    "jest": "30.2.0",
    "js-yaml": "4.1.1",
    "prettier": "3.7.4",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0"
  },
  "dependencies": {
    "antlr4": "4.13.2"
  }
}
